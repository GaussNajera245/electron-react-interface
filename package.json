{
  "name": "lx",
  "productName": "lx",
  "version": "1.0.0",
  "description": "My Electron application description",
  "main": "public/electron.js",
  "scripts": {
    "build-dev": "webpack",
    "watch": "webpack --watch",
    "start-front": "webpack serve",
    "publish": "electron-forge publish",
    "package": "electron-forge package",
    "start-ngin": "electron-forge start",
    "build": "set \"NODE_ENV=production\" && webpack",
    "make": "set \"NODE_ENV=production\" && electron-forge make",
    "start": "concurrently \"webpack serve\" \" set \"NODE_ENV=development\" &&electron-forge start\""
  },
  "private": true,
  "keywords": [],
  "author": { 
    "name": "GustavoNM",
    "email": "dev@gruposeara.com"
  },
  "license": "MIT",
  "browser": {
    "fs": false,
    "path": false,
    "os": false
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "lx"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "serialport": "^9.2.8"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.8",
    "@babel/preset-react": "^7.16.7",
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "babel-loader": "^8.2.3",
    "concurrently": "^7.0.0",
    "css-loader": "^6.5.1",
    "electron": "16.0.7",
    "mini-css-extract-plugin": "^2.5.0",
    "webpack": "^5.66.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.7.3"
  }
}
